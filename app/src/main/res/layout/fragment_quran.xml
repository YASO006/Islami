<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/quran_list_backround"
    tools:context=".ui.screens.fragments.quran.QuranFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/islami_quran"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:src="@drawable/islami_logo"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="30dp"

        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="33dp"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/quranList"
        android:layout_width="match_parent"
        android:layout_height="0dp"


        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@id/islami_quran"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/custom_quran_list" />


</androidx.constraintlayout.widget.ConstraintLayout>