<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/surahNumber"
        style="@style/smallTitle"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:background="@drawable/sura_number"
        android:gravity="center"
        android:textSize="16dp"
        tools:layout_editor_absoluteX="7dp"


        tools:layout_editor_absoluteY="10dp"
        tools:text="114" />

    <TextView
        android:id="@+id/surahName"
        style="@style/mediumTitle"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"

        app:layout_constraintLeft_toRightOf="@id/surahNumber"
        app:layout_constraintTop_toTopOf="@id/surahNumber"


        tools:text="Al-Fatiha" />

    <TextView
        android:id="@+id/versesCount"
        style="@style/smallTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="24dp"

        tools:text="7"

        app:layout_constraintBottom_toBottomOf="@id/surahNumber"
        app:layout_constraintTop_toBottomOf="@id/surahName"
        app:layout_constraintLeft_toRightOf="@id/surahNumber"

        />


    <TextView
        style="@style/smallTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginTop="3dp"
        android:paddingLeft="5dp"

        android:text="Verses"
        app:layout_constraintStart_toEndOf="@+id/versesCount"
        app:layout_constraintTop_toBottomOf="@+id/surahName" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"

        android:layout_marginHorizontal="30dp"

        android:background="@color/white"

        app:layout_constraintLeft_toLeftOf="parent"


        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="72dp"

        />

    <TextView
        android:id="@+id/surahNameInArabic"
        style="@style/mediumTitle"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginTop="12dp"

        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"


        app:layout_constraintTop_toTopOf="@id/surahName"
        tools:text="الفاتحة" />


</androidx.constraintlayout.widget.ConstraintLayout>